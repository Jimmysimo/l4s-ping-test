<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ECN Ping (ICMP) â€” uses system ping with optional -Q TOS override"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <EditText
            android:id="@+id/hostInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Host (IP or DNS)"
            android:inputType="textUri"
            android:text="8.8.8.8"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <EditText
                android:id="@+id/countInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Count"
                android:inputType="number"
                android:text="5"/>

            <EditText
                android:id="@+id/intervalInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Interval (s)"
                android:inputType="numberDecimal"
                android:text="0.2"
                android:layout_marginStart="8dp"/>

            <EditText
                android:id="@+id/timeoutInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Timeout (s)"
                android:inputType="number"
                android:text="2"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <Button
                android:id="@+id/runDefaultBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Run Default"/>

            <Button
                android:id="@+id/runEct1Btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Run ECT(1)"
                android:layout_marginStart="8dp"/>

            <Button
                android:id="@+id/runEct0Btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Run ECT(0)"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/stopBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:enabled="false"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:textIsSelectable="true"
            android:typeface="monospace"
            android:textSize="12sp"/>
    </LinearLayout>
</ScrollView>
